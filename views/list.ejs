<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#myPage">Dictionary</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/">WORD</a></li>
          <li><a href="list">LIST</a></li>
            <li><a href="help">HELP</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="jumbotron text-center">
    <h1>Welcome to List Center</h1>

</div>


<div class="container">

<input class="form-control" id="myInput" type="text" style="width: 400px" placeholder="search lists with name">
<br>

<button type="button" class="btn btn-success">+ Add a List</button>

<div class="table-wrapper">
  <br>
    <% if (lists.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">List id</th>
                    <th scope="col">List Name</th>
                    <th scope="col">List Description</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody id="myTable">
                <% lists.forEach((list, index) => { %>
                    <tr>
                        <th scope="row"><%= list.vocab_list_id %></th>
                        <td><%= list.vocab_list_name %></td>
                        <td></td>
                        <td>
                              <a href="/list_detail/<%= list.vocab_list_id%>" target="_blank" rel="noopener" class="btn btn-sm btn-info">â‰¡ Detail</a>
                              <a href="/delete/<%= list.vocab_list_id%>" class="btn btn-sm btn-danger">X Delete</a>
                          </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No list found.</p>
    <% } %>
</div>
</div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

